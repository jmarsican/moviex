<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movies_nav_graph"
    app:startDestination="@id/moviesListFragment">


    <fragment
        android:id="@+id/moviesListFragment"
        android:name="com.javiermarsicano.moviex.screen.movies.MainScreenFragment"
        android:label="Movies List"
        tools:layout="@layout/main_screen_fragment" >
        <action
            android:id="@+id/action_moviesListFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.javiermarsicano.moviex.screen.details.DetailsFragment"
        android:label="Details Screen"
        tools:layout="@layout/details_fragment" >
        <argument
            android:name="movie"
            app:argType="integer" />
    </fragment>

</navigation>